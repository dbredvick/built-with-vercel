datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
    previewFeatures = ["mongoDb"]
}

model Site {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  domain    String    @unique
  thumbnail String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}